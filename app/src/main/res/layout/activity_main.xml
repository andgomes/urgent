<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufc.dspm.urgent.MainActivity"
    android:background="#FF6347">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <include layout="@layout/campanhas"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnHospitais"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="Hospitais" />

    <Button
        android:id="@+id/btnPostosDeSaude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Postos de saÃºde"
        android:onClick="visualizarPostos"/>

    <Button
        android:id="@+id/btnUpas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="UPAS"
        android:onClick="visualizarUpas"/>

    <Button
        android:id="@+id/btnSamu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="CHAMAR SAMU"
        android:onClick="chamarSamu" />

</LinearLayout>