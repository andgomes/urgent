<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.ufc.dspm.urgent.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:background="#E00000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15sp"
        android:layout_weight="4">

        <include layout="@layout/campanhas"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="330dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnHospitais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hospitais"
                android:background="#F44336"
                android:onClick="visualizarHospitaisClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnPostosDeSaude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postos de saÃºde"
                android:background="#F44336"
                android:onClick="visualizarPostosClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnUpas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPAS"
                android:background="#F44336"
                android:onClick="visualizarUpasClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btListagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listagem de postos"
                android:background="#F44336"
                android:onClick="listagem"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnSamu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHAMAR SAMU"
                android:background="#F44336"
                android:onClick="chamarSamu" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
