<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufc.dspm.urgent.MainActivity"
    android:background="#FF6347">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15sp"
        android:layout_weight="4">

        <include layout="@layout/campanhas"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
            android:id="@+id/btnHospitais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospitais"
            android:onClick="visualizarHospitaisClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnPostosDeSaude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postos de saÃºde"
                android:onClick="visualizarPostosClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnUpas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPAS"
                android:onClick="visualizarUpasClick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btListagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listagem de unidades"
                android:onClick="listagem"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnSamu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHAMAR SAMU"
                android:onClick="chamarSamu" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>